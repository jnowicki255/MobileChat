<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileChat.MainPage">

    <StackLayout>
        <Frame BackgroundColor="LightPink" Padding="24" CornerRadius="0">
            <Label Text="Xamarin Chat" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <ListView x:Name="MessagesLV"/>

        <Entry x:Name="MessageEnt" 
               Placeholder="Wpisz swoją wiadomość..." 
               Keyboard="Chat"
               ReturnType="Send"/>
    </StackLayout>

</ContentPage>
